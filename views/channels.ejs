<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Channel Manager</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #333;
            color: white;
            padding: 1rem;
            text-align: center;
        }

        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 1rem;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .channel-list {
            margin: 1rem 0;
            padding: 0;
            list-style-type: none;
        }

        .channel-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            border-bottom: 1px solid #ddd;
        }

        .channel-item:last-child {
            border-bottom: none;
        }

        .channel-info {
            flex: 1;
        }

        .channel-info span {
            display: block;
            font-size: 0.9rem;
            color: #555;
        }

        .actions button {
            margin: 0 0.5rem;
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.9rem;
        }

        .actions .edit {
            background-color: #007bff;
            color: white;
        }

        .actions .delete {
            background-color: #dc3545;
            color: white;
        }

        .actions .start {
            background-color: #28a745;
            color: white;
        }

        .actions .stop {
            background-color: #ffc107;
            color: white;
        }

        .add-channel {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .add-channel button {
            padding: 0.7rem 1.2rem;
            font-size: 1rem;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .add-channel button:hover {
            background-color: #0056b3;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        label {
            font-weight: bold;
        }

        input[type="text"],
        input[type="url"] {
            padding: 0.7rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1rem;
            width: 100%;
        }

        .form-actions {
            text-align: right;
        }

        .form-actions button {
            padding: 0.7rem 1.5rem;
            font-size: 1rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .form-actions .submit {
            background-color: #28a745;
            color: white;
        }

        .form-actions .cancel {
            background-color: #6c757d;
            color: white;
        }
    </style>
</head>
<body>
    <header>
        <h1>Channel Manager</h1>
    </header>

    <div class="container">
        <div class="add-channel">
            <h2>Manage Channels</h2>
            <button onclick="location.href='/channels/new'">Add New Channel</button>
        </div>

        <ul class="channel-list">
            <% channels.forEach(channel => { %>
                <li class="channel-item">
                    <div class="channel-info">
                        <strong><%= channel.name %></strong>
                        <span>RTMP URL: <%= channel.rtmp_url %></span>
                        <span>Status: <%= channel.status %></span>
                    </div>
                    <div class="actions">
                        <button class="edit" onclick="location.href='/channels/edit/<%= channel.id %>'">Edit</button>
                        <button class="delete" onclick="location.href='/channels/delete/<%= channel.id %>'">Delete</button>
                        <% if (channel.status === 'stopped') { %>
                            <button class="start" onclick="location.href='/channels/start/<%= channel.id %>'">Start</button>
                        <% } else { %>
                            <button class="stop" onclick="location.href='/channels/stop/<%= channel.id %>'">Stop</button>
                        <% } %>
                    </div>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
